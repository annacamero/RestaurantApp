<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="blacktheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="color">@color/gris</item>
        <item name="colorAccent">@color/gris</item>
        <item name="colorPrimary">@color/granate</item>
        <item name="colorPrimaryDark">@color/granate</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:checkboxStyle">@color/gris</item>
        <item name="android:checkable">@color/gris</item>

    </style>

</resources>
